---
import "../../styles/global.css";
import faceImage from '../../assets/liria_hi.webp';
import Tos from './TosFile.astro'
---
<main class="bg-[#5E6293] min-h-screen pt-24">
    <!-- Hero Section -->
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-center min-h-[80vh] px-4 animation" >
        <div class="md:w-1/2 flex justify-center md:justify-end mb-8 md:mb-0">
            <div class="relative ">
                <div class="absolute  rounded-full  opacity-75 animate-pulse"></div>
                <img 
                    src={faceImage.src} 
                    class="relative w-64 md:w-80 aspect-square object-cover rounded-full border-4 border-[#EC8BCCA]/50"
                    alt="Hanami Liria profile picture" 
                />
            </div>
        </div>
    
        <div class="md:w-1/2 text-center md:text-left md:pl-12 animation">
            <p class="text-[#A44A2EB] text-xl mb-4 font-medium">Hi, my name is Hanami Liria!</p>
            <h1 class="text-[#A44A2EB] text-4xl md:text-6xl font-bold mb-6">
                I'm a freelance 
                <span class="inline-block animate-bounce">âœ§</span>
            </h1>
            <p class="text-[#A44A2EB] text-4xl md:text-6xl font-bold mb-6">Artist </p>
        </div>
       
    </div>
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-center  px-4 moveText">
        <Tos></Tos>
    </div>
</main>

<style>
    .animation {
        animation-duration: 1.5s;
        animation-name: fadeOut;
        animation-fill-mode: forwards;

    }
    .moveText {
        animation-duration: 3s;
        animation-name: moveText;
        animation-fill-mode: forwards;

    }

    @keyframes fadeOut {
        0% {
		opacity: 1;
		transform: translateY(0);
	}

	100% {
        display: none;
		opacity: 0;
		transform: translateY(-50px);
        
	    }
    }

    @keyframes moveText {
        0% {
		opacity: 0;
		transform: translateY(0);
	}
    50% {
		opacity: 0;
		transform: translateY(0);
	}

	100% {
		opacity: 1;
		
        
	    }
    }
</style>