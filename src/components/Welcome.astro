---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import SectionA from '../components/SectionA.astro'
import "../styles/global.css";

import faceImage from '../assets/liria_hi.webp';
---
<main class="bg-[#5E6293] min-h-screen pt-24">
    <!-- Hero Section -->
    <div class="container mx-auto flex flex-col md:flex-row items-center justify-center min-h-[80vh] px-4">
        <div class="md:w-1/2 flex justify-center md:justify-end mb-8 md:mb-0">
            <div class="relative">
                <div class="absolute  rounded-full  opacity-75 animate-pulse"></div>
                <img 
                    src={faceImage.src} 
                    class="relative w-64 md:w-80 aspect-square object-cover rounded-full border-4 border-[#EC8BCCA]/50"
                    alt="Hanami Liria profile picture" 
                />
            </div>
        </div>

        <div class="md:w-1/2 text-center md:text-left md:pl-12">
            <p class="text-[#A44A2EB] text-xl mb-4 font-medium">Hi, my name is Hanami Liria!</p>
            <h1 class="text-[#A44A2EB] text-4xl md:text-6xl font-bold mb-6">
                I'm a freelance 
                <span class="inline-block animate-bounce">âœ§</span>
            </h1>
            <p class="text-[#A44A2EB] text-4xl md:text-6xl font-bold mb-6">Artist </p>
        </div>
    </div>

    <SectionA />

    <!-- Commission Section -->
    <div class="container mx-auto py-20 px-4  rounded-xl">
        <div class="max-w-2xl mx-auto text-center">
            <h2 class="text-3xl font-bold text-[#5E6293] mb-6">Check Out My Commissions</h2>
            <p class="text-[#A44A2EB] mb-8 text-lg">Aqui puedes ver mis comisiones y etc</p>
            
            <a href="https://vgen.co/HanamiLiria" 
               class="inline-block group relative px-8 py-3 bg-[#8988C6] rounded-lg overflow-hidden transition-all duration-300 hover:scale-105 hover:bg-[#839AD2]">
                <span class="relative z-10 text-white font-medium text-lg">Visit My VGEN</span>
            </a>
        </div>
    </div>
</main>